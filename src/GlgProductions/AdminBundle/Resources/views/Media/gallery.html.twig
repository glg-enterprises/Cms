{% extends "ThemeBundle:Template:admin/Layout.html.twig" %}
{% block contents %}
<div id="content">
	<div class="outer">
		<div class="inner bg-light lter grid">
				<div class="grid-sizer"></div>
				{% for image in media %}
					<div class="grid-item">
						<div class="grid-item-content">
							<img src="{{ image.url | imagine_filter('thumb') }}" alt="{{ image.title }}" />	
						</div>
					</div>
				{% endfor %}
		</div>	
	</div>
</div>

{% endblock %}

{% block customscripts %}
<script src="{{ asset("/frontend/vendor/masonry/dist/masonry.pkgd.js") }}"></script>
<script>
	var $grid = $('.grid').imagesLoaded( function() {
	  $grid.masonry({
	    itemSelector: '.grid-item',
	    percentPosition: true,
	    columnWidth: '.grid-sizer'
	  }); 
	});
</script>
{% endblock %}

{% block customcss %}
<style type="text/css">
	<!--
		/* item is invisible, but used for layout
		item-content is visible, and transitions size */
		.grid{
			padding-left: 25px;
		}
		.grid-item{
			float:left;
		}
		.grid-item,
		.grid-item-content {
		  width: 124px;
		  height: 94px;
		}
	-->
</style>
{% endblock %}