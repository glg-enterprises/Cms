{% extends "ThemeBundle:Template:admin/Layout.html.twig" %}
{% block contents %}
<div id="content">
	<div class="outer">
		<div class="inner bg-light lter">
			<div class="col-lg-12">
				<h2>Welkom bij Glg Cms</h2>
				<p>Hieronder staan diverse links om Glg Cms te personaliseren.</p>
				<div class="container-fluid">
					<div class="row">
						<div class="col-lg-4">
							<h3>Aan de slag</h3>
							<a href="#themaselector" class="btn btn-primary btn-lg">Thema selecteren en aanpassen</a>
						</div>
						<div class="col-lg-4">
							<h3>Vervolgstappen</h3>
							<ul class="list-unstyled">
								<li><a href="#schrijfbericht"><i class="fa fa-thumb-tack fa-rotate-45 fa-fw"></i> Maak een post</a></li>
								<li><a href=""><i class="fa fa-plus fa-fw"></i> Een "Over mij" pagina toevoegen</a></li>
								<li>
									<a href=""><i class="fa fa-globe fa-fw"></i> Website bekijken</a>
								</li>
							</ul>
						</div>
						<div class="col-lg-4"></div>
					</div>
				</div>
			</div>
		</div>
		<div class="inner bg-light lter">
			<div class="col-lg-3">
				<h2>Op dit moment</h2>
				<ul class="list-inline">
					<li><i class="fa fa-thumb-tack fa-rotate-45 fa-fw"></i>  1 bericht</li>
					<li><i class="fa fa-clone fa-fw"></i> 1 Pagina</li>
					<li><i class="fa fa-comment fa-fw"></i> 1 Reactie</li>
					<li></li>
				</ul>
				<p>Glg Cms {{ version }} gebruikt thema: GlgProductions</p>
			</div>
		</div>
		{% if widgets %}
			{% for widget in widgets %}
				<div class="outer">
					<div class="inner bg-light lter">
						<div class="col-lg-12">{{ widget }}</div>
					</div>
				</div>
			{% endfor %}
		{% endif %}
	</div>
	{#
	<div class="outer">
		<div class="inner bg-light lter">
			<div class="col-lg-12">
				
			</div>
		</div>
	</div>#}
</div>
{% endblock %}